<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:RenamerMediaFiles"
             x:Class="RenamerMediaFiles.App"
             RequestedThemeVariant="Default">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="ViewsReferences/ResourceDictionary.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <SimpleTheme/>
        <StyleInclude Source="ViewsReferences/RenamerStyle.axaml"/>
    </Application.Styles>
</Application>